<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Survey{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>
         <nav class="navbar navbar-expand-lg navbar-light navbar-dark bg-primary">
  <a class="navbar-brand" href="{{path('homepage')}}">Survey</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="{{path('homepage')}}">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Pricing</a>
      </li>
      
      <li class="nav-item">
        <a class="nav-link " href="#">Demo</a>
      </li>
    </ul>
    <div class="form-inline my-2 my-lg-0">
      
      
      {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
      <a  class="btn btn-outline-light my-2 my-sm-0">
          <i class="fa fa-user" aria-hidden="true"></i> {{app.user.username}} 
        </a>
      
       <a class="btn btn-outline-light my-2 my-sm-0" href="{{ path('fos_user_security_logout') }}">
       {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
       </a>   
      {% else %}
      <a class="btn btn-outline-light my-2 my-sm-0" href="{{path('fos_user_registration_register')}}">Register</a>
      <a class="btn btn-outline-light my-2 my-sm-0" href="{{path('fos_user_security_login')}}">Login</a>
      {% endif %}
    </div>
  </div>
</nav>
        {% block body %}{% endblock %}
        <script src="{{asset('bundles/app/js/jquery-3.4.1.min.js')}}">          
        </script>
        {% block javascripts %}{% endblock %}
        
    </body>
</html>
